<header class="bg-white shadow-md">
    <div class="container mx-auto flex justify-between items-center px-6 py-4">
        <!-- Logo -->
        <a href="/">
            <div class="flex items-center">
                <img src="/images/shopit-logo.png" alt="ShopIt Logo" class="h-10" />
                <span class="text-2xl font-bold text-green-600 ml-2">ShopIt</span>
            </div>
        </a>

        <!-- Navbar (hidden on mobile) -->
        <nav class="hidden md:flex space-x-6">
            <a href="/"
                class="flex items-center text-gray-700 hover:text-green-600 font-medium transition duration-300">
                <i class="fas fa-box-open mr-2"></i> <!-- Product Icon -->
                Products
            </a>
            <a href="/protected/cart"
                class="flex items-center text-gray-700 hover:text-green-600 font-medium transition duration-300">
                <!-- Cart Icon with Badge -->
                <div class="relative flex items-center">
                    <i class="fas fa-shopping-cart text-lg"></i> <!-- Cart Icon -->
                    <!-- Badge for Cart Items -->
                    <div
                        class="absolute -top-2 -right-2 bg-yellow-500 text-white text-xs font-semibold rounded-full h-5 w-5 flex items-center justify-center">
                        3</div>
                </div>
                <!-- Cart Text -->
                <span class="ml-2">Cart</span>
            </a>

            <a href="#orders"
                class="flex items-center text-gray-700 hover:text-green-600 font-medium transition duration-300">
                <i class="fas fa-receipt mr-2"></i> <!-- Orders Icon -->
                Orders
            </a>
        </nav>

        <!-- Sign In Button (desktop) -->
        {{#if user}}
        <div class="hidden md:flex space-x-4 items-center">
            <a href="/protected/admin"
                class="flex items-center text-gray-700 hover:text-green-600 text-lg font-medium transition duration-300">
                <i class="fas fa-user-shield mr-2"></i> <!-- User Shield Icon -->
                Admin
            </a>
            <a
                class="bg-green-500 text-white font-semibold py-2 px-4 rounded-lg hover:bg-yellow-600 transition duration-300">
                <i class="fas fa-user mr-2"></i>
                {{user.name}}
            </a>
            <a href="/signout"
                class="bg-yellow-500 text-white font-semibold py-2 px-4 rounded-lg hover:bg-yellow-600 transition duration-300">
                <i class="fas fa-user mr-2"></i>
                Sign Out
            </a>
        </div>
        {{else}}
        <div class="hidden md:flex space-x-4 items-center">
            <a href="/protected/admin"
                class="flex items-center text-gray-700 hover:text-green-600 text-lg font-medium transition duration-300">
                <i class="fas fa-user-shield mr-2"></i><!-- User Shield Icon -->
                Admin
            </a>
            <a href="/signin"
                class="bg-green-500 text-white font-semibold py-2 px-4 rounded-lg hover:bg-yellow-600 transition duration-300">
                <i class="fas fa-user mr-2"></i>
                Sign In
            </a>
            <a href="/signup"
                class="bg-yellow-500 text-white font-semibold py-2 px-4 rounded-lg hover:bg-yellow-600 transition duration-300">
                <i class="fas fa-user mr-2"></i>
                Sign Up
            </a>
        </div>
        {{/if}}

        <!-- Hamburger Menu for Mobile -->
        <div class="md:hidden">
            <button id="hamburger" class="focus:outline-none text-3xl">
                <i class="fas fa-bars"></i>
            </button>
        </div>
    </div>

    <!-- Mobile Menu (hidden initially) -->
    <div id="mobileMenu" class="md:hidden hidden bg-white shadow-lg py-4">
        <nav class="flex flex-col space-y-4 px-6">
            <a href="#products"
                class="flex items-center text-gray-700 hover:text-green-600 text-lg font-medium transition duration-300">
                <i class="fas fa-box-open mr-2"></i> <!-- Product Icon -->
                Products
            </a>
            <a href="/protected/cart"
                class="flex items-center text-gray-700 hover:text-green-600 text-lg font-medium transition duration-300 relative">
                <i class="fas fa-shopping-cart mr-2"></i> <!-- Cart Icon -->
                Cart
                <!-- Badge for Cart Items -->
                <span
                    class="absolute top-1 right-0 bg-yellow-500 text-white text-xs font-semibold rounded-full h-5 w-5 flex items-center justify-center">3</span>
            </a>
            <a href="#orders"
                class="flex items-center text-gray-700 hover:text-green-600 text-lg font-medium transition duration-300">
                <i class="fas fa-receipt mr-2"></i> <!-- Orders Icon -->
                Orders
            </a>
            <a href="/protected/admin"
                class="flex items-center text-gray-700 hover:text-green-600 text-lg font-medium transition duration-300">
                <i class="fas fa-user-shield mr-2"></i> <!-- User Shield Icon -->
                Admin
            </a>
            {{#if user}}
            <div class="flex justify-evenly">
                <a
                    class=" bg-green-500 text-white font-semibold py-2 px-4 rounded-lg hover:bg-yellow-600 transition duration-300 text-center ">
                    <i class="fas fa-user mr-2"></i>
                    {{user.name}}
                </a>
                <a href="/signout"
                    class="bg-yellow-500 text-white font-semibold py-2 px-4 rounded-lg hover:bg-yellow-600 transition duration-300 text-center ">
                    <i class="fas fa-user mr-2"></i>
                    Sign Out
                </a>
            </div>
            {{else}}
            <div class="flex justify-evenly">
                <a href="/signin"
                    class=" bg-green-500 text-white font-semibold py-2 px-4 rounded-lg hover:bg-yellow-600 transition duration-300 text-center ">
                    <i class="fas fa-user mr-2"></i>
                    Sign In
                </a>
                <a href="/signup"
                    class="bg-yellow-500 text-white font-semibold py-2 px-4 rounded-lg hover:bg-yellow-600 transition duration-300 text-center ">
                    <i class="fas fa-user mr-2"></i>
                    Sign Up
                </a>
            </div>
            {{/if}}
        </nav>
    </div>
</header>