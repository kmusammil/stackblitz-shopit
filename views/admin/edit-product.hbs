<div class="container mx-auto px-4 py-8">
    <h2 class="text-3xl font-bold text-gray-800 mb-6 text-center">Edit Product</h2>

    <!-- Centered and Reduced Width Form -->
    <div class="max-w-md mx-auto bg-white border border-gray-200 rounded-lg shadow-md overflow-hidden p-6">
    {{#with productDetails}}
        <form action="/protected/admin/edit/{{_id}}/{{encodeURIComponent imageUrl}}" method="POST" enctype="multipart/form-data">
            <!-- Product Name -->
            <div class="mb-4">
                <label class="block text-gray-700 font-semibold mb-2" for="product-name">
                    Product Name
                </label>
                <input type="text" id="product-name" name="name"
                    class="w-full bg-gray-100 border border-gray-300 rounded-lg py-2 px-4 text-gray-700 focus:outline-none focus:ring-2 focus:ring-green-400 focus:border-transparent"
                    value="{{name}}" required>
            </div>

            <!-- Category -->
            <div class="mb-4">
                <label class="block text-gray-700 font-semibold mb-2" for="category">
                    Category
                </label>
                <input type="text" id="category" name="category"
                    class="w-full bg-gray-100 border border-gray-300 rounded-lg py-2 px-4 text-gray-700 focus:outline-none focus:ring-2 focus:ring-green-400 focus:border-transparent"
                    value="{{category}}" required>
            </div>

            <!-- Price -->
            <div class="mb-4">
                <label class="block text-gray-700 font-semibold mb-2" for="price">
                    Price
                </label>
                <input type="number" id="price" name="price"
                    class="w-full bg-gray-100 border border-gray-300 rounded-lg py-2 px-4 text-gray-700 focus:outline-none focus:ring-2 focus:ring-green-400 focus:border-transparent"
                    value="{{price}}" required>
            </div>

            <!-- Description -->
            <div class="mb-4">
                <label class="block text-gray-700 font-semibold mb-2" for="description">
                    Description
                </label>
                <textarea id="description" name="description"
                    class="w-full bg-gray-100 border border-gray-300 rounded-lg py-2 px-4 text-gray-700 focus:outline-none focus:ring-2 focus:ring-green-400 focus:border-transparent"
                    required>{{description}}</textarea>
            </div>



            <!-- Stock -->
            <div class="mb-4">
                <label class="block text-gray-700 font-semibold mb-2" for="stock">
                    Stock Status
                </label>
                <select id="stock" name="stock"
                    class="w-full bg-gray-100 border border-gray-300 rounded-lg py-2 px-4 text-gray-700 focus:outline-none focus:ring-2 focus:ring-green-400 focus:border-transparent"
                    required>
                    <option value="In Stock">In Stock</option>
                    <option value="Out of Stock">Out of Stock</option>
                </select>
            </div>


            <!-- Image Upload -->
            <div class="mb-4">
                <label class="block text-gray-700 font-semibold mb-2" for="product-image">
                    Product Image
                </label>
                <input type="file" id="product-image" name="imageUrl"
                    class="w-full bg-gray-100 border border-gray-300 rounded-lg py-2 px-4 text-gray-700 focus:outline-none focus:ring-2 focus:ring-green-400 focus:border-transparent"
                    >
                <div class="mt-2">
                    <img src="/{{imageUrl}}" id="image-preview" class="w-32 h-32 object-cover border border-gray-300 rounded-lg"
                        alt="Image Preview">
                </div>
            </div>

            


            <!-- Submit Button -->
            <div class="flex justify-end">
                <button type="submit"
                    class="bg-green-500 text-white font-semibold py-2 px-4 rounded-lg hover:bg-green-600 transition duration-300">
                    Edit Product
                </button>
            </div>
        </form>
    {{/with}}
    </div>
</div>

