<div class="container mx-auto px-4 py-8">
    <h2 class="text-3xl font-bold text-gray-800 mb-6">View Products</h2>
    <div class="flex justify-end mt-20">
        <a href="/admin/add-product" class="mb-3 bg-green-500 text-white font-semibold py-2 px-4 rounded-lg hover:bg-green-600 transition duration-300 flex items-center">
            <i class="fas fa-plus mr-2"></i> <!-- Plus Icon -->
            Add Product
        </a>
    </div>
    
    <!-- Add overflow-x-auto here for responsiveness -->
    <div class="overflow-x-auto">
        <table class="min-w-full bg-white border border-gray-200 rounded-lg shadow-md overflow-hidden">
            <thead>
                <tr class="bg-gray-200 text-gray-600 uppercase text-sm leading-normal">
                    <th class="py-3 px-6 text-left">Product</th>
                    <th class="py-3 px-6 text-left">Category</th>
                    <th class="py-3 px-6 text-left">Price</th>
                    <th class="py-3 px-6 text-left">Stock</th>
                    <th class="py-3 px-6 text-left">Image</th>
                    <th class="py-3 px-6 text-center">Actions</th>
                </tr>
            </thead>
            <tbody class="text-gray-600 text-sm font-light">
                {{#each allProducts}}
                    <tr class="border-b border-gray-200 hover:bg-gray-100 transition duration-300">
                        <td class="py-3 px-6 flex items-center mt-3">
                            <i class="fas fa-box-open mr-2"></i> <!-- Product Icon -->
                            {{name}}                    </td>
                        <td class="py-3 px-6">{{category}}</td>
                        <td class="py-3 px-6">${{price}}</td>
                        <td class="py-3 px-6">{{stock}}</td>
                        <td class="py-3 px-6 w-16 h-16"> <!-- Adjust image size for responsiveness -->
                            <img src='/images/shopit-logo.png' class="object-contain w-full h-full">
                        </td>
                        <td class="py-3 px-6 text-center">
                            <a href="#edit" class="text-blue-600 hover:text-blue-800 transition duration-300 mr-2">
                                <i class="fas fa-edit"></i> <!-- Edit Icon -->
                            </a>
                            <a href="/admin/delete/{{this._id}}" class="text-red-600 hover:text-red-800 transition duration-300">
                                <i class="fas fa-trash-alt"></i> <!-- Delete Icon -->
                            </a>
                        </td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>
