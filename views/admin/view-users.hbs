<div class="bg-gray-100 min-h-screen flex justify-center">
    <div class="container mx-auto p-4">
        <h1 class="text-3xl font-bold mb-6 text-gray-800">All Users</h1>
        <div class="bg-white shadow-md rounded-lg overflow-hidden">
            <table class="min-w-full bg-white">
                <thead>
                    <tr>
                        <th class="py-2 px-4 bg-gray-200 text-gray-600 font-semibold text-left">Name</th>
                        <th class="py-2 px-4 bg-gray-200 text-gray-600 font-semibold text-left">Email</th>
                        <th class="py-2 px-4 bg-gray-200 text-gray-600 font-semibold text-left">Password</th>
                        <th class="py-2 px-4 bg-gray-200 text-gray-600 font-semibold text-left">Delete</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each users}}
                    <tr class="border-b">
                        <td class="py-3 px-4 text-gray-700">{{name}}</td>
                        <td class="py-3 px-4 text-gray-700">{{email}}</td>
                        <td class="py-3 px-4 text-gray-700">{{password}}</td>
                        <td class="py-3 px-4 text-gray-700">
                            <a href="/protected/admin/delete-user/{{email}}"
                                onclick="return confirm('Are you sure you want to delete the user with email: {{email}}?');"
                                class="text-red-600 hover:text-red-800 transition duration-300">
                                <i class="fas fa-trash-alt"></i> <!-- Delete Icon -->
                            </a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>