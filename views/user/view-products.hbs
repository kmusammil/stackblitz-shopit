<div class="container mx-auto px-4 py-6">
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
        <!-- Product Card -->
        {{#each allProducts}}
        <div class="bg-white shadow-md rounded-lg overflow-hidden hover:shadow-lg transition-shadow duration-300">
            <!-- Product Image -->
            <div class="relative">
                <img src="{{imageUrl}}" alt="Product Image" class="w-full h-48 object-cover">
                <!-- Sale or Discount Badge -->
                <span class="absolute top-2 left-2 bg-yellow-500 text-white text-xs font-bold px-2 py-1 rounded">-20%</span>
            </div>

            <!-- Product Info -->
            <div class="p-4">
                <!-- Product Name -->
                <h3 class="text-lg font-semibold text-gray-800 truncate">{{name}}</h3>

                <!-- Category -->
                <div class="mt-1 text-sm text-gray-500">Category: <span class="font-medium text-gray-800">{{category}}</span></div>

                <!-- Stock Status -->
                <div class="mt-1 text-sm">
                    {{#if (eq stock "In Stock")}}
                        <span class="font-semibold text-green-600">{{stock}}</span>
                    {{else}}
                        <span class="font-semibold text-red-600">{{stock}}</span>
                    {{/if}}
                </div>


                <!-- Description -->
                <p class="mt-2 text-gray-600 text-sm">
                    {{description}}
                </p>

                <!-- Rating -->
                <div class="flex items-center mt-2">
                    <i class="fas fa-star text-yellow-400"></i>
                    <i class="fas fa-star text-yellow-400"></i>
                    <i class="fas fa-star text-yellow-400"></i>
                    <i class="fas fa-star text-yellow-400"></i>
                    <i class="fas fa-star-half-alt text-yellow-400"></i>
                    <span class="ml-2 text-sm text-gray-600">(4.5)</span>
                </div>

                <!-- Price -->
                <div class="mt-2 text-lg font-bold text-green-600">${{price}}</div>
                <div class="text-sm text-gray-500 line-through">${{originalPrice}}</div>

                <!-- Hover CTA (Button) -->
                <div class="mt-4">
                    <button class="w-full bg-green-500 text-white font-bold py-2 px-4 rounded hover:bg-green-600 transition-colors duration-300">
                        Add to Cart
                    </button>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>
