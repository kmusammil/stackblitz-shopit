<div class="container mx-auto px-4 py-6">
    <div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-5 gap-6">
        <!-- Product Card -->
        {{#each allProducts}}
        <div class="bg-white shadow-md rounded-lg overflow-hidden hover:shadow-lg transition-shadow duration-300 w-full">
            <!-- Product Image -->
            <div class="relative">
                <img src="{{imageUrl}}" alt="Product Image" class="w-full h-48 object-cover">
                <!-- Sale or Discount Badge -->
                <span class="absolute top-1 left-1 bg-yellow-500 text-white text-xs font-bold px-2 py-1 rounded">-0</span>
            </div>

            <!-- Product Info -->
            <div class="p-4">
                <!-- Product Name -->
                <h3 class="text-lg font-semibold text-gray-800 truncate">{{name}}</h3>

                <!-- Category -->
                <div class="mt-1 text-sm text-gray-500">Category: <span class="font-medium text-gray-800">{{category}}</span></div>

                <!-- Stock Status -->
                <div class="mt-1 text-sm">
                    {{#if (eq stock "In Stock")}}
                        <span class="font-semibold text-green-600">{{stock}}</span>
                    {{else}}
                        <span class="font-semibold text-red-600">{{stock}}</span>
                    {{/if}}
                </div>

                <!-- Description -->
                <p class="mt-1 text-gray-600 text-sm">{{description}}</p>

                <!-- Price -->
                <div class="mt-1 text-lg font-bold text-green-600">${{price}}</div>

                <!-- Hover CTA (Button) -->
                <div class="mt-3">
                    <a href="/protected/cart/add-to-cart/{{_id}}" class="w-full bg-green-500 text-white font-bold py-2 px-4 rounded hover:bg-green-600 transition-colors duration-300 text-sm">
                        Add to Cart
                    </a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>
